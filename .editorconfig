# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80
spaces_around_brackets = both
curly_bracket_next_line = false
spaces_around_operators = true
[*.php]
indent_size = 4
curly_bracket_next_line = true
